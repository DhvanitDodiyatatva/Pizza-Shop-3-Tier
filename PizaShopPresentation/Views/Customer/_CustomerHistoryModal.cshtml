@model PizzaShopRepository.ViewModels.CustomerHistoryViewModel

@{
    int VisitCount = Model.Orders.Count();
    decimal MaxOrderAmount = Model.Orders.Any() ? Model.Orders.Max(o => o.TotalAmount) : 0;
    decimal AverageBill = Model.Orders.Any() ? Model.Orders.Average(o => o.TotalAmount) : 0;
}

<div class="modal fade" id="customerHistoryModal" tabindex="-1" aria-labelledby="customerHistoryModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="customerHistoryModalLabel">Customer History - @Model.Customer.Name</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Customer Details -->
                <div class="mb-4">

                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Name:</strong> @Model.Customer.Name</p>
                            <p><strong>Mobile Number:</strong> @Model.Customer.PhoneNo</p>
                            <p><strong>Max Order: </strong> ₹ @MaxOrderAmount </p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Average Bill:</strong> ₹ @AverageBill </p>
                            <p><strong>Coming Since:</strong> @(Model.Customer.Date?.ToString("dd-MM-yyyy"))</p>
                            <p><strong>Visits:</strong> @VisitCount </p>
                        </div>
                    </div>
                </div>

                <!-- Order History -->

                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="">
                            <tr>

                                <th>Order Date</th>
                                <th class="text-nowrap">Order Type</th>
                                <th>Payment</th>
                                <th>Items</th>
                                <th class="text-nowrap">Total Amount</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var order in Model.Orders)
                            {


                                <tr>

                                    <td>@order.CreatedAt?.ToString("dd-MM-yyyy HH:mm")

                                    </td>
                                    <td>@order.OrderType</td>
                                    <td>@order.PaymentStatus</td>
                                    <td>
                                        <ul class="list-unstyled mb-0">

                                            @{
                                                int itemCount = 0;
                                            }
                                            @foreach (var item in order.OrderItems)
                                            {
                                                <li class="d-none">@(itemCount++)</li>
                                                <li class="d-none">@item.Item.Name</li>
                                            }
                                            <li>@itemCount</li>
                                        </ul>
                                    </td>
                                    <td>@order.TotalAmount.ToString("C")</td>
                                </tr>


                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>