@model List<PizzaShopRepository.Models.Category>

<div class="sidebar fixed-start ">
    <h4>Category</h4>
    <ul class="list-group">
        <li class="list-group-item @(string.IsNullOrEmpty(ViewBag.SelectedCategory) ? "" : "")">
            <a href="" class="category-link text-decoration-none" data-category-name="">Favorite
                Items</a>
        </li>
        <li class="list-group-item @(string.IsNullOrEmpty(ViewBag.SelectedCategory) ? "active" : "")">
            <a href="" class="category-link text-decoration-none" data-category-name="">All</a>
        </li>
        @foreach (var category in Model)
        {
            <li class="list-group-item @(ViewBag.SelectedCategory == category.Name ? "active" : "")">
                <a href="" class="category-link text-decoration-none" data-category-name="@category.Name">@category.Name</a>
            </li>
        }
    </ul>
</div>