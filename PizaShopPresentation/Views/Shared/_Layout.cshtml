@using System.Security.Claims
@{
    var currentUserId = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;

    var profileImageUrl = Url.Content("~/images/Default_pfp.svg.png");

    var imageClaim = User.FindFirst("profile_image")?.Value;
    if (!string.IsNullOrEmpty(imageClaim))
    {
        profileImageUrl = imageClaim;
    }
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Pizza Shop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>

<body>
    <div class="main-dashboard">
        <div class="row g-0">
            <!-- Desktop-view sidebar -->
            <div class="sidebar position-sticky top-0 col-xl-2 col-lg-3 d-none d-lg-block p-3">
                <a asp-controller="Home" asp-action="Dashboard">
                    <div class="d-flex align-items-center justify-content-center my-2" style="gap: 10px">
                        <img src="~/images/logos/pizzashop_logo.png" alt="pizza-shop-logo" style="height: 60px" />
                        <div class="icon-text fw-bolder fs-6">PIZZASHOP</div>
                    </div>
                </a>
                <a asp-area="" asp-controller="Home" asp-action="Dashboard">
                    <div
                        class="row sidebar-item my-3 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["Action"]?.ToString() == "Dashboard" ? "active" : "")">
                        <div class="d-flex align-items-center" style="gap: 10px">
                            <img src="~/images/dashboard/dashboard.png" alt="dashboard-icon"
                                style="height: 20px; width: 20px;">
                            <span>Dashboard</span>
                        </div>
                    </div>
                </a>
                <a asp-area="" asp-controller="Home" asp-action="Users">
                    <div
                        class="row sidebar-item my-3 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["Action"]?.ToString() == "Users" ? "active" : "")">
                        <div class="d-flex align-items-center" style="gap: 10px">
                            <img src="~/images/dashboard/users.png" alt="users-icon" style="height: 20px; width: 20px;">
                            <span>Users</span>
                        </div>
                    </div>
                </a>

                @if (!User.IsInRole("chef"))
                {
                    <a asp-area="" asp-controller="Home" asp-action="Roles">
                        <div
                            class="row sidebar-item my-3 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["Action"]?.ToString() == "Roles" ? "active" : "")">
                            <div class="d-flex align-items-center" style="gap: 10px">
                                <img src="~/images/dashboard/rolesAndPermission.png" alt="rolesAndPermission-icon"
                                    style="height: 20px; width: 20px;">
                                <span>Roles and Permissions</span>
                            </div>
                        </div>
                    </a>
                }
                @if (User.HasClaim(c => c.Type == "Permission_Menu" && (c.Value == "View")))
                {
                    <a asp-controller="Menu" asp-action="Index">
                        <div
                            class="row sidebar-item my-3 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Menu" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                            <div class="d-flex align-items-center" style="gap: 10px">
                                <img src="~/images/dashboard/menu.png" alt="menu-icon" style="height: 20px; width: 20px;">
                                <span>Menu</span>
                            </div>
                        </div>
                    </a>
                }
                <a asp-controller="TableAndSection" asp-action="Index">
                    <div
                        class="row sidebar-item my-3 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "TableAndSection" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                        <div class="d-flex align-items-center" style="gap: 10px">
                            <img src="~/images/dashboard/tableandSection.png" alt="tables-icon"
                                style="height: 20px; width: 20px;">
                            <span>Table and section</span>
                        </div>
                    </div>
                </a>
                <a asp-controller="TaxFee" asp-action="TaxesFees">
                    <div
                        class="row sidebar-item my-3 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "TaxFee" && ViewContext.RouteData.Values["Action"]?.ToString() == "TaxesFees" ? "active" : "")">
                        <div class="d-flex align-items-center" style="gap: 10px">
                            <img src="~/images/dashboard/tax.png" alt="tax-icon" style="height: 20px; width: 20px;">
                            <span>Taxes and Fees</span>
                        </div>
                    </div>
                </a>
                <a asp-controller="Orders" asp-action="Index">
                    <div
                        class="row sidebar-item my-3 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Orders" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                        <div class="d-flex align-items-center" style="gap: 10px">
                            <img src="~/images/dashboard/orders.png" alt="orders-icon"
                                style="height: 20px; width: 20px;">
                            <span>Orders</span>
                        </div>
                    </div>
                </a>
                <a asp-controller="Customer" asp-action="Index">
                    <div
                        class="row sidebar-item my-3 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Customer" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                        <div class="d-flex align-items-center" style="gap: 10px">
                            <img src="~/images/dashboard/customer.png" alt="customer-icon"
                                style="height: 20px; width: 20px;">
                            <span>Customers</span>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Main Content -->
            <div class="col-xl-10 col-lg-9 col-md-12 col-12 ">
                <!-- Header -->
                <div
                    class="header-desktop position-sticky top-0 d-flex align-items-center justify-content-end p-3 d-none d-md-none d-lg-block w-100 position-relative z-3">
                    @if (User.IsInRole("account_manager"))
                    {
                        <div class="OrdApp position-absolute">
                            <a asp-area="" asp-controller="OrderApp" asp-action="Table">
                                <img src="~/images/OrderApp.svg" alt="KOT-icon" style="max-height: 40px; fill: white;" />
                            </a>
                        </div>
                    }
                    <div class="profile position-absolute">

                        <button class="btn p-0" style="border: none; background: transparent;" data-bs-toggle="dropdown"
                            aria-expanded="false">
                            <img src="@profileImageUrl" alt="default-pfp" style="max-height: 40px; aspect-ratio: 1"
                                class="rounded-circle" />
                        </button>

                        <!-- Dropdown Menu -->
                        <div class="dropdown-menu">
                            <a class="dropdown-item" asp-controller="Home" asp-action="MyProfile">My
                                Profile</a>
                            <a class="dropdown-item" asp-controller="Home" asp-action="ChangePassword">Change
                                Password</a>

                            <!-- Button trigger modal -->
                            <button type="button" class="dropdown-item" data-bs-toggle="modal"
                                data-bs-target="#exampleModalLogOut">
                                Logout
                            </button>


                        </div>
                    </div>

                </div>
                <!-- Header for small screen size -->
                <div class="header d-block d-lg-none d-flex align-items-center justify-content-between p-3 ">
                    <a class="" data-bs-toggle="offcanvas" href="#offcanvasExample" role="button"
                        aria-controls="offcanvasExample">
                        <Button class="btn btn-toolbar bg-white"><svg xmlns="http://www.w3.org/2000/svg" width="20"
                                height="20" fill="currentColor" class="bi bi-list" viewBox="0 0 16 16">
                                <path fill-rule="evenodd"
                                    d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5" />
                            </svg></Button>
                    </a>
                    <div>
                        @if (User.IsInRole("account_manager"))
                        {
                            <div class="OrdApp-mob position-absolute">
                                <a asp-area="" asp-controller="OrderApp" asp-action="Table">
                                    <img src="~/images/OrderApp.svg" alt="KOT-icon"
                                        style="max-height: 40px; fill: white;" />
                                </a>
                            </div>
                        }
                        <button class="btn p-0" style="border: none; background: transparent;" data-bs-toggle="dropdown"
                            aria-expanded="false">
                            <img src="@profileImageUrl" alt="default-pfp" style="max-height: 40px; aspect-ratio: 1"
                                class="rounded-circle" />
                        </button>

                        <!-- Dropdown Menu -->
                        <div class="dropdown-menu">
                            <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="MyProfile">My
                                Profile</a>
                            <a class="dropdown-item" asp-controller="Home" asp-action="ChangePassword">Change
                                Password</a>

                            <!-- Button trigger modal -->
                            <button type="button" class="dropdown-item" data-bs-toggle="modal"
                                data-bs-target="#exampleModalLogOut">
                                Logout
                            </button>


                        </div>
                    </div>





                    <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample"
                        aria-labelledby="offcanvasExampleLabel">
                        <div class="offcanvas-header">
                            <div class="offcanvas-title" id="offcanvasExampleLabel">
                                <div class="d-flex align-items-center justify-content-center my-2" style="gap: 10px">
                                    <img src="~/images/logos/pizzashop_logo.png" alt="pizza-shop-logo"
                                        style="height: 60px" />
                                    <div class="icon-text fw-bolder fs-6">PIZZASHOP</div>
                                </div>
                            </div>
                            <button type="button" class="btn-close" data-bs-dismiss="offcanvas"
                                aria-label="Close"></button>
                        </div>
                        <div class="offcanvas-body">
                            <div class="sidebar bg-white">
                                <a asp-area="" asp-controller="Home" asp-action="Dashboard">
                                    <div
                                        class="row sidebar-item my-3 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["Action"]?.ToString() == "Dashboard" ? "active" : "")">
                                        <div class="d-flex align-items-center" style="gap: 10px">
                                            <img src="~/images/dashboard/dashboard.png" alt="dashboard-icon"
                                                style="height: 20px; width: 20px;">
                                            <span>Dashboard</span>
                                        </div>
                                    </div>
                                </a>
                                <a asp-area="" asp-controller="Home" asp-action="Users">
                                    <div
                                        class="row sidebar-item my-3 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["Action"]?.ToString() == "Users" ? "active" : "")">
                                        <div class="d-flex align-items-center" style="gap: 10px">
                                            <img src="~/images/dashboard/users.png" alt="users-icon"
                                                style="height: 20px; width: 20px;">
                                            <span>Users</span>
                                        </div>
                                    </div>
                                </a>
                                @if (!User.IsInRole("chef"))
                                {
                                    <a asp-area="" asp-controller="Home" asp-action="Roles">
                                        <div
                                            class="row sidebar-item my-3 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["Action"]?.ToString() == "Roles" ? "active" : "")">
                                            <div class="d-flex align-items-center" style="gap: 10px">
                                                <img src="~/images/dashboard/rolesAndPermission.png"
                                                    alt="rolesAndPermission-icon" style="height: 20px; width: 20px;">
                                                <span>Roles and Permissions</span>
                                            </div>
                                        </div>
                                    </a>
                                }
                                @if (User.HasClaim(c => c.Type == "Permission_Menu" && (c.Value == "View")))
                                {
                                    <a asp-controller="Menu" asp-action="Index">
                                        <div
                                            class="row sidebar-item my-3 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Menu" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                                            <div class="d-flex align-items-center" style="gap: 10px">
                                                <img src="~/images/dashboard/menu.png" alt="menu-icon"
                                                    style="height: 20px; width: 20px;">
                                                <span>Menu</span>
                                            </div>
                                        </div>
                                    </a>
                                }
                                <a asp-controller="TableAndSection" asp-action="Index">
                                    <div
                                        class="row sidebar-item my-3 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "TableAndSection" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                                        <div class="d-flex align-items-center" style="gap: 10px">
                                            <img src="~/images/dashboard/tableandSection.png" alt="tables-icon"
                                                style="height: 20px; width: 20px;">
                                            <span>Table and section</span>
                                        </div>
                                    </div>
                                </a>
                                <a asp-controller="TaxFee" asp-action="TaxesFees">
                                    <div
                                        class="row sidebar-item my-3 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "TaxFee" && ViewContext.RouteData.Values["Action"]?.ToString() == "TaxesFees" ? "active" : "")">
                                        <div class="d-flex align-items-center" style="gap: 10px">
                                            <img src="~/images/dashboard/tax.png" alt="tax-icon"
                                                style="height: 20px; width: 20px;">
                                            <span>Taxes and Fees</span>
                                        </div>
                                    </div>
                                </a>
                                <a asp-controller="Orders" asp-action="Index">
                                    <div
                                        class="row sidebar-item my-3 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Orders" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                                        <div class="d-flex align-items-center" style="gap: 10px">
                                            <img src="~/images/dashboard/orders.png" alt="orders-icon"
                                                style="height: 20px; width: 20px;">
                                            <span>Orders</span>
                                        </div>
                                    </div>
                                </a>
                                <a asp-controller="Customer" asp-action="Index">
                                    <div
                                        class="row sidebar-item my-3 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Customer" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                                        <div class="d-flex align-items-center" style="gap: 10px">
                                            <img src="~/images/dashboard/customer.png" alt="customer-icon"
                                                style="height: 20px; width: 20px;">
                                            <span>Customers</span>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Dashboard Content -->
                @RenderBody()
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="exampleModalLogOut" tabindex="-1" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form asp-controller="Home" asp-action="Logout">
                        <div class="modal-body d-flex align-items-center justify-content-center flex-column">
                            <img src="~/images/toppng.com-warning-icon-2400x2400.png" alt="DeleteModal"
                                style="height: 80px; width: 80px">
                            <p>Are you sure you want to Logout?</p>
                        </div>
                        <div class="modal-footer d-flex justify-content-center">
                            <button type="submit" class="btn btn-main text-white">Yes</button>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"
                                aria-label="Close">No</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div id="pdf-render-container" style="display: none;"></div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script
        src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
