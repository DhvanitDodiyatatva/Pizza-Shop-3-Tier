@model List<PizzaShopRepository.Models.Modifier>
@{
    // Retrieve SelectedModifierIds from ViewData or TempData if passed, or use an empty list
    var selectedModifierIds = ViewData["SelectedModifierIds"] as List<int> ?? new List<int>();
}

<div class="modal fade" id="selectModifiersModal" tabindex="-1" aria-labelledby="selectModifiersModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="selectModifiersModalLabel">Select Existing Modifiers</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body custom-scrollbar"
                style="width: 500px; max-height: 450px; min-height: 250px; overflow-y: auto; overflow-x: hidden;">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Search" id="modifierSearchInput" />
                    <span class="input-group-text">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-search" viewBox="0 0 16 16">
                            <path
                                d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
                        </svg>
                    </span>
                </div>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">
                                <input type="checkbox" id="selectAllExistingModifiers" />
                            </th>
                            <th scope="col">Name</th>
                            <th scope="col" class="text-center">Unit</th>
                            <th scope="col" class="text-center">Rate</th>
                            <th scope="col" class="text-center">Quantity</th>
                        </tr>
                    </thead>
                    <tbody id="modifierList">
                        @foreach (var modifier in Model)
                        {
                            <tr data-modifier-id="@modifier.Id" data-modifier-name="@modifier.Name">
                                <td>
                                    <input type="checkbox" class="modifier-checkbox" value="@modifier.Id"
                                        @(selectedModifierIds.Contains(modifier.Id) ? "checked" : "") />
                                </td>
                                <td>@modifier.Name</td>
                                <td class="text-center">@modifier.Unit</td>
                                <td class="text-center">@modifier.Price</td>
                                <td class="text-center">@modifier.Quantity</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-main text-white" id="addSelectedModifiers">Add</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>