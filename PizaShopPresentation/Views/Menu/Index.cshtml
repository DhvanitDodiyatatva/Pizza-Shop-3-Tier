<script>
    let currentCategoryId = null;
    let currentPage = 1;
    let currentPageSize = 5;

    document.getElementById("categoryToggle").addEventListener("click", function () {
        // Existing toggle logic remains unchanged
    });

    $(document).ready(function () {
        // Load categories for the item tab
        $.ajax({
            url: '@Url.Action("GetCategories", "Menu")',
            type: 'GET',
            success: function (data) {
                $('#item-tab-pane #category-list').html(data);
                var firstCategoryId = $('#item-tab-pane #category-list .category-option:first').data('category-id');
                if (firstCategoryId) {
                    console.log('First category ID:', firstCategoryId);
                    currentCategoryId = firstCategoryId;
                    loadItems(firstCategoryId, '', currentPage, currentPageSize);
                    $('#item-tab-pane #category-list .category-option:first').addClass('active');
                } else {
                    console.log('No categories found, loading all items');
                    loadItems(null, '', currentPage, currentPageSize);
                }

                // Add click event to category items
                $('#item-tab-pane #category-list .category-option').on('click', function (e) {
                    e.preventDefault();
                    var categoryId = $(this).data('category-id');
                    currentCategoryId = categoryId;
                    currentPage = 1; // Reset to first page on category change
                    $('#item-tab-pane #category-list .category-option').removeClass('active');
                    $(this).addClass('active');
                    loadItems(categoryId, $('#searchInput').val(), currentPage, currentPageSize);
                });
            },
            error: function (xhr, status, error) {
                console.log('Error loading categories: ' + status + ' - ' + error);
                alert('Error loading categories');
                loadItems(null, '', currentPage, currentPageSize);
            }
        });

        // Search input event (debounced)
        let searchTimeout;
        $('#searchInput').on('input', function () {
            clearTimeout(searchTimeout);
            searchTimeout = setTimeout(() => {
                currentPage = 1; // Reset to first page on search
                if (currentCategoryId) {
                    loadItems(currentCategoryId, $(this).val(), currentPage, currentPageSize);
                } else {
                    alert('Please select a category to search.');
                }
            }, 300);
        });
    });

    function loadItems(categoryId, searchTerm, page = 1, pageSize = 5) {
        console.log('Loading items for categoryId:', categoryId, 'with search:', searchTerm, 'page:', page, 'pageSize:', pageSize);
        currentPage = page;
        currentPageSize = pageSize;
        $.ajax({
            url: '@Url.Action("GetItems", "Menu")',
            type: 'GET',
            data: { 
                categoryId: categoryId, 
                searchTerm: searchTerm, 
                page: page, 
                pageSize: pageSize 
            },
            success: function (data) {
                $('#item-tab-pane #item-list').html(data);
            },
            error: function (xhr, status, error) {
                console.log('Error loading items: ' + status + ' - ' + error);
                alert('Error loading items');
            }
        });
    }
</script>

