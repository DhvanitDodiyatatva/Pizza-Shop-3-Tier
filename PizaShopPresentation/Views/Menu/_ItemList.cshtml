@model PizzaShopRepository.ViewModels.PagedItemViewModel

@if (Model == null || !Model.Items.Any())
{
    <div class="row g-0 category-side">
        <p>No Items available in this Category</p>
    </div>
}
else
{
    @foreach (var item in Model.Items)
    {
        <tr id="item-row-@item.Id" data-id="@item.Id">
            <td class="py-3 text-center text-nowrap" scope="row">
                <div class="form-check item-checkbox">
                    <input type="checkbox" class="itemCheckbox text-center form-check-input" value="@item.Id"
                        style="height: 20px; width: 20px; color: blue;">
                    <label class="form-check-label" for="flexcheckchecked_@item.Id"></label>
                </div>
            </td>
            <td class="py-3 text-nowrap">
                <img src="@(!string.IsNullOrEmpty(item.ImageUrl) ? item.ImageUrl : "/images/dining-menu.png")" alt="item-img"
                    style="max-height: 30px; aspect-ratio: 1/1; margin-right: 3%; border-radius: 50%; object-fit: cover;">
                @item.Name
            </td>
            <td class="py-3 text-center text-nowrap">
                @switch (item.ItemType?.ToLower())
                {
                    case "vegetarian":
                        <img src="~/images/icons/veg-icon.svg" alt="veg-img" style="height: 30px; aspect-ratio: 1/1;">
                        break;
                    case "non_vegetarian":
                        <img src="~/images/icons/non-veg-icon.svg" alt="non-veg-img" style="height: 30px; aspect-ratio: 1/1;">
                        break;
                    case "vegan":
                        <img src="~/images/icons/vegan-icon.svg" alt="vegan-img" style="height: 30px; aspect-ratio: 1/1;">
                        break;
                    default:
                        <span>Unknown</span>
                        break;
                }
            </td>
            <td class="py-3 text-center text-nowrap">@item.Price</td>
            <td class="py-3 text-center text-nowrap">@item.Quantity</td>
            <td class="py-3 text-center text-nowrap">
                <div class="form-check form-switch d-flex justify-content-center">
                     @if (User.HasClaim(c => c.Type == "Permission_Menu" && (c.Value == "Alter")))
                                {
                    <input class="form-check-input toggle-availability" type="checkbox" role="switch"
                        id="flexswitchcheckchecked_@item.Id" style="width: 50px; height: 30px;" @(item.IsAvailable ? "checked" :
                                                                                                                "") data-item-id="@item.Id">
                    }
            <label class="form-check-label" for="flexswitchcheckchecked_@item.Id"></label>
        </div>
    </td>
    <td class="py-3 text-center text-nowrap">
        @if (User.HasClaim(c => c.Type == "Permission_Menu" && (c.Value == "Alter")))
                {
                    <button type="button" class="btn p-0 text-body-btn edit-item-btn" data-item-id="@item.Id">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                            class="bi bi-pen text-body-btn me-2" viewBox="0 0 16 16">
                            <path
                                d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001m-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708z" />
                        </svg>
                    </button>
                }
         @if (User.HasClaim(c => c.Type == "Permission_Menu" && (c.Value == "Delete")))
            {
                <button type="button" class="btn p-0 text-body-btn" data-bs-toggle="modal"
                    data-bs-target="#examplemodal_@item.Id">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-trash3"
                        viewBox="0 0 16 16">
                        <path
                            d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5M11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 0 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47M8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5" />
                    </svg>
                </button>
            }
                <!-- Modal for Delete Confirmation -->
                <div class="modal fade" id="examplemodal_@item.Id" tabindex="-1" aria-labelledby="examplemodallabel_@item.Id"
                    aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="examplemodallabel_@item.Id">Delete Confirmation</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body d-flex align-items-center justify-content-center flex-column">
                                <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor"
                                    class="bi bi-exclamation-triangle" viewBox="0 0 16 16">
                                    <path
                                        d="M7.938 2.016A.13.13 0 0 1 8.002 2a.13.13 0 0 1 .063.016.15.15 0 0 1 .054.057l6.857 11.667c.036.06.035.124.002.183a.2.2 0 0 1-.054.06.1.1 0 0 1-.066.017H1.146a.1.1 0 0 1-.066-.017.2.2 0 0 1-.054-.06.18.18 0 0 1 .002-.183L7.884 2.073a.15.15 0 0 1 .054-.057m1.044-.45a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767z" />
                                    <path
                                        d="M7.002 12a1 1 0 1 1 2 0 1 1 0 0 1-2 0M7.1 5.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0z" />
                                </svg>
                                <p>Are you sure you want to delete @item.Name?</p>
                            </div>
                            <div class="modal-footer d-flex justify-content-center align-items-center">
                                <button type="button" class="btn btn-main text-white delete-item-btn"
                                    data-item-id="@item.Id">Yes</button>
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                            </div>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
    }
}

<!-- Hidden inputs to store pagination data -->
<input type="hidden" name="TotalPages" value="@Model.TotalPages" />
<input type="hidden" name="CurrentPage" value="@Model.CurrentPage" />

<script>
    $(document).ready(function () {
        // Function to update the selectAll checkbox state
        function updateSelectAllCheckbox() {
            var totalCheckboxes = $(".itemCheckbox").length;
            var checkedCheckboxes = $(".itemCheckbox:checked").length;

            var selectAllCheckbox = $("#selectAll");
            if (checkedCheckboxes === 0) {
                selectAllCheckbox.prop("checked", false);
                selectAllCheckbox.prop("indeterminate", false);
            } else if (checkedCheckboxes === totalCheckboxes && totalCheckboxes > 0) {
                selectAllCheckbox.prop("checked", true);
                selectAllCheckbox.prop("indeterminate", false);
            } else {
                selectAllCheckbox.prop("checked", false);
                selectAllCheckbox.prop("indeterminate", true);
            }
        }

        // Initialize selectAll checkbox state on page load
        updateSelectAllCheckbox();

        // Edit item button handler
        $(".edit-item-btn").on("click", function () {
            var itemId = $(this).data("item-id");
            $.ajax({
                url: '@Url.Action("EditItem", "Menu")',
                type: 'GET',
                data: { id: itemId },
                success: function (result) {
                    $("#addItemContainer").html(result);
                    var modal = new bootstrap.Modal(document.getElementById("editItemModal_" + itemId));
                    modal.show();
                },
                error: function () {
                    toastr.error("Failed to load edit item form.");
                }
            });
        });

        // Delete item button handler
        $(".delete-item-btn").on("click", function () {
            var itemId = $(this).data("item-id");
            $.ajax({
                url: '@Url.Action("DeleteItem", "Menu")',
                type: 'POST',
                data: { id: itemId },
                success: function (response) {
                    if (response.success) {
                        toastr.success("Item deleted successfully.");
                        var modal = bootstrap.Modal.getInstance(document.getElementById("examplemodal_" + itemId));
                        modal.hide();
                        $('.modal-backdrop').remove();
                        $("#item-row-" + itemId).remove();
                        // Remove from selectedItemIds
                        selectedItemIds = selectedItemIds.filter(id => id !== itemId.toString());
                        // Reload items for the current page
                        loadItems(currentCategoryId, currentPage, pageSize);
                    } else {
                        toastr.error("Failed to delete item: " + response.message);
                    }
                },
                error: function () {
                    toastr.error("An error occurred while deleting the item.");
                }
            });
        });

        // Toggle availability handler
        $(".toggle-availability").on("change", function () {
            var itemId = $(this).data("item-id");
            var isAvailable = $(this).is(":checked");

            $.ajax({
                url: '@Url.Action("ToggleAvailability", "Menu")',
                type: 'POST',
                data: { id: itemId, isAvailable: isAvailable },
                headers: {
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                },
                success: function (response) {
                    if (response.success) {
                        toastr.success(response.message);
                    } else {
                        toastr.error(response.message);
                        // Revert the toggle state on error
                        $(this).prop("checked", !isAvailable);
                    }
                }.bind(this), // Bind 'this' to maintain context
                error: function () {
                    toastr.error("An error occurred while updating availability.");
                    // Revert the toggle state on error
                    $(this).prop("checked", !isAvailable);
                }.bind(this) // Bind 'this' to maintain context
            });
        });
    });
</script>