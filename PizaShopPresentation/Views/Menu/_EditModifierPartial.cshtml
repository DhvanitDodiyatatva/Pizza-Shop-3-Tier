@model PizzaShopRepository.ViewModels.ModifierViewModel

<div class="modal fade" id="editModifierModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="editModalLabel">Edit Modifier</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editModifierForm" asp-action="EditModifier" asp-controller="Menu" method="post">
                    <input asp-for="Id" type="hidden" />
                    <div class="row g-2 p-0">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <div class="dropdown">
                                    <button
                                        class="btn btn-lg dropdown-toggle border-secondary-subtle w-100 h-100 text-start"
                                        type="button" id="multiSelectDropdown" data-bs-toggle="dropdown"
                                        aria-expanded="false">
                                        Select Modifier Group(s)
                                    </button>
                                    <ul class="dropdown-menu" aria-labelledby="multiSelectDropdown">
                                        @foreach (var group in Model.AvailableModifierGroups)
                                        {
                                            <li>
                                                <label>
                                                    <input type="checkbox" name="ModifierGroupIds" value="@group.Id"
                                                        @(Model.ModifierGroupIds.Contains(group.Id) ? "checked" : "") />
                                                    @group.Name
                                                </label>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Name" class="form-control floatingInput" placeholder="Name" />
                                <label asp-for="Name">Name*</label>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-floating">
                                <input asp-for="Price" class="form-control floatingInput" placeholder="Rate" />
                                <label asp-for="Price">Rate*</label>
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-floating">
                                <input asp-for="Quantity" class="form-control floatingInput" placeholder="Quantity" />
                                <label asp-for="Quantity">Quantity*</label>
                                <span asp-validation-for="Quantity" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-floating">
                                <select asp-for="Unit" class="form-select" required>
                                    <option value="grams">Grams</option>
                                    <option value="pieces">Pieces</option>
                                </select>
                                <label asp-for="Unit">Select a Unit*</label>
                                <span asp-validation-for="Unit" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-floating">
                                <input asp-for="Description" class="form-control floatingInput"
                                    placeholder="Description" />
                                <label asp-for="Description">Description</label>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" form="editModifierForm" class="btn btn-primary">Save</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>