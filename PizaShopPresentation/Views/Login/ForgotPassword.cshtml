@model PizzaShopRepository.ViewModels.Authenticate;

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot-password Page</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RMS.styles.css" asp-append-version="true" />
    <!-- Add Toastr CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css"
        integrity="sha512-vKMx8UnXk60zUwyUnUPM3HbQo8QfmNx7+ltw8Pm5zLusl1XIfwcxo8DbWCqMGkaTTM7JVyuIWgD2M8nMPWqv5Kw=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">

</head>

<body>
    <div class="box z-0">
        <div class="row h-100 w-100 g-0">
            <!-- Left side with the image -->
            <div class="col-12 col-sm-12 col-md-12 col-lg-6 col left-side d-none d-lg-block">
                <img src="~/images/dominos_background.jpg" alt="login-img" class="img-fluid z-2"
                    style="object-fit: cover;">
            </div>
            <!-- Right side with content -->
            <div class="col-12 col-sm-12 col-md-12 col-lg-6 col right-side d-flex align-items-center z-0">
                <!-- Background image for smaller screens -->
                <div class="bg-image d-block d-lg-none position-absolute w-100 h-100"
                    style="background-image: url('~/images/dominos_background.jpg'); background-size: cover; background-position: center; z-index: -1;">
                </div>
                <!-- Card for smaller screens -->
                <div class="container d-block d-lg-none">
                    <div class="card mx-auto p-4"
                        style="max-width: 500px; background-color: rgba(255, 255, 255, 0.9); border-radius: 15px;">
                        <div class="d-flex align-items-center justify-content-center my-2" style="gap: 10px;">
                            <div><img src="~/images/logos/pizzashop_logo.png" alt="pizza-shop-logo"
                                    style="height:100px; aspect-ratio: 1;"></div>
                            <div class="fw-bolder fs-1 text-primary">PIZZASHOP</div>
                        </div>
                        <div class="mx-xl-5 mx-lg-3 px-xl-5 px-lg-3 mx-md-2 px-md-4 mx-sm-2 px-sm-1 mx-2 px-1">
                            <h2 class="my-2 fw-bolder">Forgot Password</h2>
                            <form method="post" asp-controller="Login" asp-action="SendEmail">
                                <div class="mb-3 custom-color">
                                    <label for="exampleInputEmail1" class="form-label text-secondary">Enter your email
                                        and we'll send you a link to reset your password</label>
                                    <div class="d-flex align-items-center justify-content-end position-relative">
                                        <input type="email" class="form-control" id="exampleInputEmail1" name="email"
                                            value="@ViewData["Email"]" aria-describedby="emailHelp">
                                        <img src="~/images/icons/customer.svg" alt="email-icon"
                                            style="width: 20px; aspect-ratio: 1;"
                                            class="me-2 position-absolute rounded-2">
                                    </div>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <button type="submit" class="btn btn-main text-white w-100">Send</button>
                                <div class="w-100 d-flex justify-content-center">
                                    <a asp-controller="Login" asp-action="Index"
                                        class="forgot-password text-decoration-none mt-2">Back To Login</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- Default content for larger screens -->
                <div class="right-side-content d-none d-lg-block flex-column w-100">
                    <div class="d-flex align-items-center justify-content-center my-2" style="gap: 10px;">
                        <div><img src="~/images/logos/pizzashop_logo.png" alt="pizza-shop-logo"
                                style="height:100px; aspect-ratio: 1;"></div>
                        <div class="fw-bolder fs-1 text-primary">PIZZASHOP</div>
                    </div>
                    <div class="mx-xl-5 mx-lg-3 px-xl-5 px-lg-3 mx-md-2 px-md-4 mx-sm-2 px-sm-1 mx-2 px-1">
                        <h2 class="my-2 fw-bolder">Forgot Password</h2>
                        <form method="post" asp-controller="Login" asp-action="SendEmail">
                            <div class="mb-3 custom-color">
                                <label for="exampleInputEmail1" class="form-label text-secondary">Enter your email and
                                    we'll send you a link to reset your password</label>
                                <div class="d-flex align-items-center justify-content-end position-relative">
                                    <input type="email" class="form-control" id="exampleInputEmail1" name="email"
                                        value="@ViewData["Email"]" aria-describedby="emailHelp">
                                    <img src="~/images/icons/customer.svg" alt="email-icon"
                                        style="width: 20px; aspect-ratio: 1;" class="me-2 position-absolute rounded-2">
                                </div>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-main text-white w-100">Send</button>
                            <div class="w-100 d-flex justify-content-center">
                                <a asp-controller="Login" asp-action="Index"
                                    class="forgot-password text-decoration-none mt-2">Back To Login</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"
        integrity="sha512-VEd+nq25CkR676O+pLBnDW09R7VQX9Mdiij052gVCp5yVH3jGtH70Ho/UUv4mJDsEdTvqRCFZg0NKGiojGnUCw=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <!-- Toastr Initialization and Messages -->
    <script type="text/javascript">
        $(document).ready(function () {
            // Log to console for debugging
            console.log("Document ready fired");

            // Verify Toastr is loaded
            if (typeof toastr === 'undefined') {
                console.error("Toastr is not loaded!");
            } else {
                console.log("Toastr is loaded successfully");

                // Customize Toastr options
                toastr.options = {
                    "closeButton": true,
                    "positionClass": "toast-top-right",
                    "timeOut": "5000" // 5 seconds
                };

                // Check and display success message
                var successMessage = '@Html.Raw(ViewData["SuccessMessage"])';
                if (successMessage) {
                    console.log("Success Message: " + successMessage);
                    toastr.success(successMessage, 'Success');
                }

                // Check and display error message
                var errorMessage = '@Html.Raw(ViewData["ErrorMessage"])';
                if (errorMessage) {
                    console.log("Error Message: " + errorMessage);
                    toastr.error(errorMessage, 'Error');
                }
            }
        });
    </script>
</body>

</html>