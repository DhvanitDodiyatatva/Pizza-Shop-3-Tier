@model PizzaShopRepository.ViewModels.ResetPassword

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ResetPassword Page</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RMS.styles.css" asp-append-version="true" />
</head>

<body>
    <div class="box z-0">
        <div class="row h-100 w-100 g-0">
            <!-- Left side with the image -->
            <div class="col-12 col-sm-12 col-md-12 col-lg-6 col left-side d-none d-lg-block">
                <img src="~/images/dominos_background.jpg" alt="login-img" class="img-fluid z-2"
                    style="object-fit: cover;">
            </div>
            <!-- Right side with content -->
            <div class="col-12 col-sm-12 col-md-12 col-lg-6 col right-side d-flex align-items-center z-0">
                <!-- Background image for smaller screens -->
                <div class="bg-image d-block d-lg-none position-absolute w-100 h-100"
                    style="background-image: url('~/images/dominos_background.jpg'); background-size: cover; background-position: center; z-index: -1;">
                </div>
                <!-- Card for smaller screens -->
                <div class="container d-block d-lg-none">
                    <div class="card mx-auto p-4"
                        style="max-width: 500px; background-color: rgba(255, 255, 255, 0.9); border-radius: 15px;">
                        <div class="d-flex align-items-center justify-content-center my-2" style="gap: 10px;">
                            <div><img src="~/images/logos/pizzashop_logo.png" alt="pizza-shop-logo"
                                    style="height:100px; aspect-ratio: 1;"></div>
                            <div class="fw-bolder fs-1 text-primary">PIZZASHOP</div>
                        </div>
                        <h2 class="my-2 fw-bolder">Welcome,</h2>
                        @if (ViewData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger">@ViewData["ErrorMessage"]</div>
                        }

                        <form asp-controller="Login" asp-action="ResetPassword" id="resetPasswordForm">
                            <input type="hidden" asp-for="Email" />
                            <input type="hidden" asp-for="Token" value="@ViewData["Token"]" />

                            <div class="mb-3">
                                <div class="d-flex align-items-center justify-content-end position-relative">
                                    <input type="password" class="form-control inputPassword" id="inputPassword"
                                        name="NewPassword" placeholder="New Password*" asp-for="NewPassword">
                                    <img src="~/images/icons/passwordhide.png" alt="eye-icon"
                                        id="togglePasswordSmallNew"
                                        style="width: 20px; aspect-ratio: 1; cursor: pointer;"
                                        class="me-2 position-absolute rounded-2" data-target="NewPassword">
                                </div>
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                                <div id="passwordErrors" class="text-danger">
                                    <div id="uppercaseError" class="password-error"></div>
                                    <div id="lowercaseError" class="password-error"></div>
                                    <div id="digitError" class="password-error"></div>
                                    <div id="specialCharError" class="password-error"></div>
                                    <div id="lengthError" class="password-error"></div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <div class="d-flex align-items-center justify-content-end position-relative">
                                    <input type="password" class="form-control inputPassword" id="inputConfirmPassword"
                                        placeholder="Confirm New Password*" asp-for="ConfirmPassword">
                                    <img src="~/images/icons/passwordhide.png" alt="eye-icon"
                                        id="togglePasswordSmallConfirm"
                                        style="width: 20px; aspect-ratio: 1; cursor: pointer;"
                                        class="me-2 position-absolute rounded-2" data-target="ConfirmPassword">
                                </div>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-main text-white w-100">Submit</button>
                        </form>
                    </div>
                </div>
                <!-- Default content for larger screens -->
                <div class="right-side-content d-none d-lg-flex flex-column w-100">
                    <div class="d-flex align-items-center justify-content-center my-2" style="gap: 10px;">
                        <div><img src="~/images/logos/pizzashop_logo.png" alt="pizza-shop-logo"
                                style="height:100px; aspect-ratio: 1;"></div>
                        <div class="fw-bolder fs-1 text-primary">PIZZASHOP</div>
                    </div>
                    <div class="mx-xl-5 mx-lg-3 px-xl-5 px-lg-3 mx-md-2 px-md-4 mx-sm-2 px-sm-2 mx-2 px-2">
                        <h2 class="my-2 fw-bolder">Welcome,</h2>
                        <form asp-controller="Login" asp-action="ResetPassword" id="resetPasswordFormLarge">
                            <input type="hidden" asp-for="Email" />
                            <input type="hidden" asp-for="Token" value="@ViewData["Token"]" />

                            <div class="mb-3">
                                <div class="d-flex align-items-center justify-content-end position-relative">
                                    <input type="password" class="form-control inputPassword" id="inputPasswordLarge"
                                        name="NewPassword" placeholder="New Password*" asp-for="NewPassword">
                                    <img src="~/images/icons/passwordhide.png" alt="eye-icon"
                                        id="togglePasswordLargeNew"
                                        style="width: 20px; aspect-ratio: 1; cursor: pointer;"
                                        class="me-2 position-absolute rounded-2" data-target="NewPassword">
                                </div>
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                                <div id="passwordErrorsLarge" class="text-danger">
                                    <div id="uppercaseErrorLarge" class="password-error"></div>
                                    <div id="lowercaseErrorLarge" class="password-error"></div>
                                    <div id="digitErrorLarge" class="password-error"></div>
                                    <div id="specialCharErrorLarge" class="password-error"></div>
                                    <div id="lengthErrorLarge" class="password-error"></div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <div class="d-flex align-items-center justify-content-end position-relative">
                                    <input type="password" class="form-control inputPassword"
                                        id="inputConfirmPasswordLarge" placeholder="Confirm New Password*"
                                        asp-for="ConfirmPassword">
                                    <img src="~/images/icons/passwordhide.png" alt="eye-icon"
                                        id="togglePasswordLargeConfirm"
                                        style="width: 20px; aspect-ratio: 1; cursor: pointer;"
                                        class="me-2 position-absolute rounded-2" data-target="ConfirmPassword">
                                </div>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-main text-white w-100">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Password validation function (unchanged)
        function validatePassword() {
            const password = document.getElementById("inputPassword").value;
            const uppercaseError = document.getElementById("uppercaseError");
            const lowercaseError = document.getElementById("lowercaseError");
            const digitError = document.getElementById("digitError");
            const specialCharError = document.getElementById("specialCharError");
            const lengthError = document.getElementById("lengthError");

            // Regular expressions for each requirement
            const hasUppercase = /[A-Z]/.test(password);
            const hasLowercase = /[a-z]/.test(password);
            const hasDigit = /\d/.test(password);
            const hasSpecialChar = /[^\da-zA-Z]/.test(password);
            const hasMinLength = password.length >= 6;

            // Update error messages
            uppercaseError.textContent = hasUppercase ? "" : "Password must contain at least one uppercase letter.";
            lowercaseError.textContent = hasLowercase ? "" : "Password must contain at least one lowercase letter.";
            digitError.textContent = hasDigit ? "" : "Password must contain at least one digit.";
            specialCharError.textContent = hasSpecialChar ? "" : "Password must contain at least one special character.";
            lengthError.textContent = hasMinLength ? "" : "Password must be at least 6 characters.";

            // Enable/disable submit button based on validity
            const isValid = hasUppercase && hasLowercase && hasDigit && hasSpecialChar && hasMinLength;
            document.querySelector('button[type="submit"]').disabled = !isValid;
        }

        // Attach event listener to password input
        document.getElementById("inputPassword").addEventListener("input", validatePassword);

        // Run validation on form submission to ensure client-side checks are enforced
        document.querySelector('form').addEventListener('submit', function (event) {
            const password = document.getElementById("inputPassword").value;
            const hasUppercase = /[A-Z]/.test(password);
            const hasLowercase = /[a-z]/.test(password);
            const hasDigit = /\d/.test(password);
            const hasSpecialChar = /[^\da-zA-Z]/.test(password);
            const hasMinLength = password.length >= 6;

            if (!(hasUppercase && hasLowercase && hasDigit && hasSpecialChar && hasMinLength)) {
                event.preventDefault();
                validatePassword(); // Re-run validation to show errors
            }
        });

        $(document).ready(function () {
            // Ensure unobtrusive validation is applied to both forms
            $('form').each(function () {
                $.validator.unobtrusive.parse(this);
            });

            // Password toggle functionality for all togglePassword IDs
            $('[id^="togglePassword"]').click(function () {
                const target = $(this).data('target');
                const input = target === 'NewPassword' ?
                    $(this).closest('.mb-3').find('input[name="NewPassword"]') :
                    $(this).closest('.mb-3').find('input[name="ConfirmPassword"]');
                const type = input.attr('type') === 'password' ? 'text' : 'password';
                input.attr('type', type);
                $(this).attr('src', type === 'password' ?
                    '/images/icons/passwordhide.png' :
                    '/images/icons/passShow.png');
            });

            // Password validation for large screen form
            function validatePasswordLarge() {
                const password = document.getElementById("inputPasswordLarge").value;
                const uppercaseError = document.getElementById("uppercaseErrorLarge");
                const lowercaseError = document.getElementById("lowercaseErrorLarge");
                const digitError = document.getElementById("digitErrorLarge");
                const specialCharError = document.getElementById("specialCharErrorLarge");
                const lengthError = document.getElementById("lengthErrorLarge");

                const hasUppercase = /[A-Z]/.test(password);
                const hasLowercase = /[a-z]/.test(password);
                const hasDigit = /\d/.test(password);
                const hasSpecialChar = /[^\da-zA-Z]/.test(password);
                const hasMinLength = password.length >= 6;

                uppercaseError.textContent = hasUppercase ? "" : "Password must contain at least one uppercase letter.";
                lowercaseError.textContent = hasLowercase ? "" : "Password must contain at least one lowercase letter.";
                digitError.textContent = hasDigit ? "" : "Password must contain at least one digit.";
                specialCharError.textContent = hasSpecialChar ? "" : "Password must contain at least one special character.";
                lengthError.textContent = hasMinLength ? "" : "Password must be at least 6 characters.";

                const isValid = hasUppercase && hasLowercase && hasDigit && hasSpecialChar && hasMinLength;
                $('#resetPasswordFormLarge button[type="submit"]').prop('disabled', !isValid);
            }

            // Attach event listener to large screen password input
            const largePasswordInput = document.getElementById("inputPasswordLarge");
            if (largePasswordInput) {
                largePasswordInput.addEventListener("input", validatePasswordLarge);
            }

            // Form submission validation for both forms
            $('form').on('submit', function (e) {
                const form = $(this);
                const isLargeForm = form.attr('id') === 'resetPasswordFormLarge';
                const passwordInput = isLargeForm ?
                    form.find('#inputPasswordLarge') :
                    form.find('#inputPassword');
                const password = passwordInput.val();

                const hasUppercase = /[A-Z]/.test(password);
                const hasLowercase = /[a-z]/.test(password);
                const hasDigit = /\d/.test(password);
                const hasSpecialChar = /[^\da-zA-Z]/.test(password);
                const hasMinLength = password.length >= 6;

                if (!(hasUppercase && hasLowercase && hasDigit && hasSpecialChar && hasMinLength)) {
                    e.preventDefault();
                    if (isLargeForm) {
                        validatePasswordLarge();
                    } else {
                        validatePassword();
                    }
                }

                // Check unobtrusive validation
                if (!form.valid()) {
                    e.preventDefault();
                }
            });
        });
    </script>
</body>

</html>